<div class="container">
  <div class="card">
    <div class="container-fliud">
      <div class="wrapper row">
        <div class="preview col-md-6">

          <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1"><%= image_tag(@product.image_url) %></div>
          </div>
          <ul class="preview-thumbnail nav nav-tabs">
            <li class="active"><a data-target="#pic-1" data-toggle="tab"><%= image_tag(@product.image_url) %></a></li>
            <li><a data-target="#pic-2" data-toggle="tab"><%= image_tag(@product.image_url) %></a></li>
            <li><a data-target="#pic-3" data-toggle="tab"><%= image_tag(@product.image_url) %></a></li>
            <li><a data-target="#pic-4" data-toggle="tab"><%= image_tag(@product.image_url) %></a></li>
            <li><a data-target="#pic-5" data-toggle="tab"><%= image_tag(@product.image_url) %></a></li>
          </ul>

        </div>
        <div class="details col-md-6">
          <h3 class="product-title"><%= @product.title %></h3>
          <br>
          <br>
          <p class="product-description"><%= @product.description %></p>
          <h5 class="price">current price: <span><%= number_to_currency(@product.price) %></span></h5>
          <br>
          <br>
          <div class="add-to-cart">
            <%= button_to 'Add To Cart', line_items_path(product_id: @product.id), remote: true %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
